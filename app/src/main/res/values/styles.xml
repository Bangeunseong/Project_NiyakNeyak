<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">
    <style name="toolBarTextAppearance" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/white_500</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="ErrorTextAppearance" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@android:color/holo_red_light</item>
        <item name="android:textSize">11sp</item>
    </style>
    <style name="HintTextAppearance" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@android:color/holo_purple</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">bold|italic</item>
    </style>
    <style name="ToolbarTextAppearance" parent="TextAppearance.AppCompat">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">20sp</item>
        <item name="android:titleMarginStart">5dp</item>
        <item name="android:titleMarginTop">3dp</item>
        <item name="titleMarginBottom">3dp</item>
    </style>
    <style name="TextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxBackgroundColor">@color/transparent</item>
        <item name="hintTextAppearance">@style/HintTextAppearance</item>
        <item name="errorTextAppearance">@style/ErrorTextAppearance</item>
    </style>
    <style name="customSubmitBtnStyle" parent="Widget.AppCompat.Button.Colored">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="android:background">@drawable/item_dialog_submit_btn</item>
    </style>
    <style name="DialogFragmentStyle" parent="ThemeOverlay.AppCompat.Dialog">
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.2</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowBackground">@color/transparent_gray_500</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="TimePickerTheme" parent="ThemeOverlay.MaterialComponents.TimePicker">
        <item name="android:textSize">35sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:timePickerMode">spinner</item>
        <item name="android:background">@color/light_purple_500</item>
    </style>
    <style name="customAddBtnStyle" parent="Widget.AppCompat.Button.Colored">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/gray_500</item>
        <item name="android:background">@drawable/item_dialog_timer_add_btn_bg</item>
    </style>
    <style name="customInspectBtnStyle" parent="Widget.AppCompat.Button.Colored">
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black_500</item>
        <item name="android:background">@drawable/item_option_layout_bg</item>
    </style>
</resources>