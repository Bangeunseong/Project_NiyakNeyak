<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/clock_selection_single"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/transparent">

    <ImageView
        android:id="@+id/medicine_img"
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/medication_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:layout_marginStart="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/medication_amount"
        app:layout_constraintEnd_toStartOf="@id/medicationCheckbox"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:layout_constraintStart_toEndOf="@id/medicine_img" />

    <TextView
        android:id="@+id/medication_amount"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:layout_marginStart="10dp"
        app:layout_constraintBottom_toTopOf="@id/medication_detail"
        app:layout_constraintEnd_toStartOf="@id/medicationCheckbox"
        app:layout_constraintStart_toEndOf="@id/medicine_img"
        app:layout_constraintTop_toBottomOf="@id/medication_name"
        app:layout_constraintHorizontal_bias="0" />

    <TextView
        android:id="@+id/medication_detail"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:layout_marginStart="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/medicationCheckbox"
        app:layout_constraintStart_toEndOf="@id/medicine_img"
        app:layout_constraintTop_toBottomOf="@id/medication_amount"
        app:layout_constraintHorizontal_bias="0" />

    <CheckBox
        android:id="@+id/medicationCheckbox"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/medication_name" />
</androidx.constraintlayout.widget.ConstraintLayout>