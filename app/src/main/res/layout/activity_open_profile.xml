<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_setting_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.capstone.project_niyakneyak.main.fragment.SettingFragment">

    <!-- NestedScrollView를 사용하여 스크롤 가능한 영역 생성 -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <!-- ConstraintLayout을 사용하여 하위 요소 배치 -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/profile_settings"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16sp"

                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/My_Account"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:paddingBottom="5sp"
                    android:text="Account Information"
                    android:textSize="20sp"
                    android:textStyle="bold" />


                <ImageView

                    android:id="@+id/imageView"
                    android:layout_width="100sp"
                    android:layout_height="100sp"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/baseline_account_circle_24" />


                <TextView
                    android:id="@+id/your_current_name_textview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="김아무개"
                    android:textColor="#321061"
                    android:textSize="18sp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/profile_settings2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16sp"
                app:layout_constraintTop_toBottomOf="@id/profile_settings">

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10sp"
                    android:text="이름        "
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/TextName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="text"
                    android:text="아무개"
                    android:textAlignment="center" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/profile_settings3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16sp"
                app:layout_constraintTop_toBottomOf="@id/profile_settings2">

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10sp"
                    android:text="나이        "
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/editTextAge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="text"
                    android:text="24"
                    android:textAlignment="center" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/gender_settings"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16sp"
                app:layout_constraintTop_toBottomOf="@id/profile_settings3">

                <TextView
                    android:id="@+id/textView55"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingRight="10sp"
                    android:text="성별        "
                    android:textSize="20sp" />
                <TextView
                    android:id="@+id/GenderTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="text"
                    android:text="남성"
                    android:textAlignment="center" />

            </LinearLayout>
            <LinearLayout
                android:id="@+id/ID_settings"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16sp"
                app:layout_constraintTop_toBottomOf="@id/gender_settings">

                <TextView
                    android:id="@+id/textViewID"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingRight="10sp"
                    android:text="아이디   "
                    android:textSize="20sp" />
                <TextView
                    android:id="@+id/IDTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="text"
                    android:text="user@gmail.com"
                    android:textColor="#808080"
                    android:textAlignment="center" />


            </LinearLayout>
            <LinearLayout
                android:id="@+id/PW_settings"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16sp"
                app:layout_constraintTop_toBottomOf="@id/ID_settings">

                <TextView
                    android:id="@+id/textViewPW"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingRight="10sp"
                    android:text="비밀번호"
                    android:textSize="20sp" />
                <TextView
                    android:id="@+id/PWTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="text"
                    android:text="abc"
                    android:textAlignment="center" />


            </LinearLayout>
            <LinearLayout
                android:id="@+id/PhoneNum_settings"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16sp"
                app:layout_constraintTop_toBottomOf="@id/PW_settings">

                <TextView
                    android:id="@+id/textViewPN"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingRight="10sp"
                    android:text="전화번호"
                    android:textSize="20sp" />
                <TextView
                    android:id="@+id/PNTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="text"
                    android:text="abc"
                    android:textAlignment="center" />


            </LinearLayout>
            <LinearLayout
                android:id="@+id/BirthDay_settings"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16sp"
                app:layout_constraintTop_toBottomOf="@id/PhoneNum_settings">

                <TextView
                    android:id="@+id/textViewBD"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingRight="10sp"
                    android:text="생년월일"
                    android:textSize="20sp" />
                <TextView
                    android:id="@+id/BDTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="text"
                    android:text="abc"
                    android:textAlignment="center" />


            </LinearLayout>


            <LinearLayout
                android:id="@+id/logout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16sp"
                android:layout_marginTop="20sp"
                android:gravity="center"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/BirthDay_settings">
                <Button
                    android:id="@+id/logout_button"
                    android:layout_width="120sp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10sp"
                    android:text="로그아웃" />

                <Button
                    android:id="@+id/modify_button"
                    android:layout_width="120sp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10sp"
                    android:text="수정하기" />
            </LinearLayout>


        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>
</FrameLayout>
